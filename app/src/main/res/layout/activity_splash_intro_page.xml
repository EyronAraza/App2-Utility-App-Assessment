<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_intro"
    android:id="@+id/main_layout"
    tools:context=".SplashIntroPage">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/app_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_app_title"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fontFamily="@font/verdana"
        android:text="VIBEY"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_40sdp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintVertical_bias="0.07"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_enter_name"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:fontFamily="@font/verdana"
        android:text="WHAT'S YOUR NAME?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTxt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:ems="10"
        android:maxLength="8"
        android:inputType="textPersonName"
        android:hint="Enter Name..."
        android:textSize="20sp"
        android:textColorHint="#8179B4"
        android:fontFamily="@font/verdana"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_enter_name"
        app:layout_constraintVertical_bias="0.09"
        tools:layout_editor_absoluteY="361dp"
        tools:ignore="HardcodedText"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:fontFamily="@font/verdana"
        android:text="NEXT"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_15sdp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:backgroundTint="@null"
        android:background="@drawable/button_border_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTxt_name"
        app:layout_constraintVertical_bias="0.17"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_select_mood"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fontFamily="@font/verdana"
        android:text="WHAT'S YOUR MOOD CURRENTLY?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_26sdp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_box_trans1"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/box_trans"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/img_happy"
        app:layout_constraintLeft_toLeftOf="@id/img_happy"
        app:layout_constraintRight_toRightOf="@id/img_happy"
        app:layout_constraintTop_toTopOf="@id/img_happy"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_happy"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/img_face_happy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_select_mood"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.13"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_calm"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/img_face_calm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_select_mood"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.5"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_sad"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/img_face_sad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_select_mood"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.87"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fontFamily="@font/verdana"
        android:text="GO"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_15sdp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:backgroundTint="@null"
        android:background="@drawable/button_border_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_select_mood"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>