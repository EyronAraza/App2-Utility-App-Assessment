<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="@drawable/bg_blue_violet"
    tools:context=".AmbiencePage">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        app:srcCompat="@drawable/icon_info"
        app:layout_constraintBottom_toTopOf="@id/txt_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/verdana"
        android:text="AMBIENCES"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_33sdp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        tools:ignore="HardcodedText" />

    <!-- SCROLL VIEW FOR THEMES -->
    <ScrollView
        android:id="@+id/scrollView_themes"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_420sdp"
        android:scrollbars="none"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintVertical_bias="0.2"
        tools:layout_editor_absoluteY="98dp">

        <!-- THEMES CONTAINER -->
        <LinearLayout
            android:id="@+id/theme_container"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- THEME: CAVE -->
            <FrameLayout
                android:id="@+id/frame_cafe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_cafe"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3sp"
                    app:srcCompat="@drawable/mask_cafe"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_cafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana"
                    android:text="CAFE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <!-- THEME: WOODLAND -->
            <FrameLayout
                android:id="@+id/frame_woodland"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20sp"
                android:layout_marginStart="3sp">

                <ImageView
                    android:id="@+id/img_woodland"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_105sdp"
                    app:srcCompat="@drawable/mask_forest"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_woodland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana"
                    android:text="WOODLAND"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <!-- THEME: FIREPLACE -->
            <FrameLayout
                android:id="@+id/frame_fireplace"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20sp"
                android:layout_marginStart="3sp">

                <ImageView
                    android:id="@+id/img_fireplace"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_105sdp"
                    app:srcCompat="@drawable/mask_fireplace"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_fireplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana"
                    android:text="FIREPLACE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <!-- THEME: RAINFOREST -->
            <FrameLayout
                android:id="@+id/frame_rainforest"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20sp"
                android:layout_marginStart="3sp">

                <ImageView
                    android:id="@+id/img_rainforest"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_105sdp"
                    app:srcCompat="@drawable/mask_rainforest"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_rainforest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana"
                    android:text="RAINFOREST"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <!-- THEME: TROPICAL ISLAND -->
            <FrameLayout
                android:id="@+id/frame_island"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20sp"
                android:layout_marginStart="3sp">

                <ImageView
                    android:id="@+id/img_island"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_105sdp"
                    app:srcCompat="@drawable/mask_tropical"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_island"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/verdana"
                    android:text="TROPICAL ISLAND"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    tools:ignore="HardcodedText" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Tab -->
    <View
        android:id="@+id/tabBar"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        />

    <ImageView
        android:id="@+id/img_icon_home"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icon_home"
        app:layout_constraintBottom_toBottomOf="@id/tabBar"
        app:layout_constraintLeft_toLeftOf="@id/tabBar"
        app:layout_constraintRight_toRightOf="@id/tabBar"
        app:layout_constraintTop_toTopOf="@id/tabBar"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_icon_theme"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icon_theme2"
        app:layout_constraintBottom_toBottomOf="@id/tabBar"
        app:layout_constraintLeft_toLeftOf="@id/tabBar"
        app:layout_constraintRight_toRightOf="@id/tabBar"
        app:layout_constraintTop_toTopOf="@id/tabBar"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintVertical_bias="0.36"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_icon_ambience"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icon_theme"
        app:layout_constraintBottom_toBottomOf="@id/tabBar"
        app:layout_constraintLeft_toLeftOf="@id/tabBar"
        app:layout_constraintRight_toRightOf="@id/tabBar"
        app:layout_constraintTop_toTopOf="@id/tabBar"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintVertical_bias="0.36"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_icon_settings"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icon_gears"
        app:layout_constraintBottom_toBottomOf="@id/tabBar"
        app:layout_constraintLeft_toLeftOf="@id/tabBar"
        app:layout_constraintRight_toRightOf="@id/tabBar"
        app:layout_constraintTop_toTopOf="@id/tabBar"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_icon_pointer"
        android:layout_width="@dimen/_7sdp"
        android:layout_height="@dimen/_7sdp"
        app:srcCompat="@drawable/icon_pointer"
        app:layout_constraintBottom_toBottomOf="@id/tabBar"
        app:layout_constraintStart_toStartOf="@id/img_icon_ambience"
        app:layout_constraintEnd_toEndOf="@id/img_icon_ambience"
        app:layout_constraintTop_toBottomOf="@id/img_icon_theme"
        app:layout_constraintVertical_bias="-1"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>